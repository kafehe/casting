{% block title %}File
{% endblock %}

{% block body %}
	<h1>File</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ file.id }}</td>
			</tr>
			<tr>
				<th>Name</th>

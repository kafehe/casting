{% extends 'base.html.twig' %}

{% block title %}File index
{% endblock %}

{% block body %}
	<h1>File index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Type</th>
				<th>FileName</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for file in files %}
				<tr>
					<td>{{ file.id }}</td>
					<td>{{ file.name }}</td>
					<td>{{ file.type }}</td>
					<td>{{ file.filename }}</td>
					<td>
						<a href="{{ path('file_show', {'id': file.id}) }}">show</a>
						<a href="{{ path('file_edit', {'id': file.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('file_new') }}">Create new</a>
{% endblock %}

{{ form_start(form) }}
{{ form_widget(form) }}
{% if app.request.attributes.get('_route') == 'casting_edit' %}
	{% for image in casting.images %}
		<div>
			<img
			src="{{ asset('/uploads/images/'~image.filename) }}" alt="fichier" width="150">

			{# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
			<a href="{{ path('casting_delete_image', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
		</div>
	{% endfor %}
{% endif %}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <h1>Document index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_doc</th>
                <th>Numero_doc</th>
                <th>Date_del</th>
                <th>Date_exp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.nameDoc }}</td>
                <td>{{ document.numeroDoc }}</td>
                <td>{{ document.dateDel ? document.dateDel|date('Y-m-d') : '' }}</td>
                <td>{{ document.dateExp ? document.dateExp|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('document_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('document_new') }}">Create new</a>
{% endblock %}
